<html>
    <head></head>
    <title>
        <%= locals.title %>
    </title>
    <link rel="stylesheet" href="https://kit.fontawesome.com/5ed7aef597.css" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/home.css">
    <body>
        <!-- <h1>Render from Ejs View!</h1> -->
        <h1 id="page-heading">
            <i class="fa-solid fa-address-book"></i>
            My Contacts List
        </h1>

        <div id="contact-div" class="mainList">
            <ul>
                <% for(let i of contact_list){%> 
                    <li class="contact-list">
                        <div class="details">
                            <p class="para"><%= i.name%></p>
                            <p class="para1"><%= i.phone%></p>
                        </div>
                        <div class="delete-button">
                            <!-- <a href="/delete-button/<%= i.phone%>"> -->
                                <!-- visible over the url phone data  -->
                            <a href="/delete-button/?phone=<%= i.phone %>&name=<%= i.name%>">
                                <i class="fa-solid fa-rectangle-xmark"></i>
                            </a>
                        </div>s
                    </li>
                <%}%>
            </ul>
        </div>

        <!-- //sending data so POST  -->
        <form id="forms" action="/create-contact" method="POST">
            <input class="Name" type="text" name="name" placeholder="Enter Name" required>
            <input class="Phn" type="text" name="phone" placeholder="Enter Phone" required>
            <button type="submit">Add</button>
        </form>

        <!-- //where ever need to display variable -->
        <script src="https://kit.fontawesome.com/5ed7aef597.js" crossorigin="anonymous"></script>
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>